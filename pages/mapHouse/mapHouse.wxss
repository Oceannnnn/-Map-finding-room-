/* pages/secondHand/secondHand.wxss */
@import "../main/main.wxss";
page {
  background:#f3f4f5;
  display:flex;
  height:100vh;
  background:#fff;
  flex-direction:column;
}
.map-wrap {
  display: flex;
  flex-direction:column;
  flex:1;
  width: 100%;
}
.map-wrap map{
  display:block;
  flex:1;
  height:150rpx;
  width: 100%;
}
.map-icon_user{
  position:fixed;
  top:50rpx;
  left:5%;
  padding:5rpx;
  width:78rpx;
  height:78rpx;
}
.best_broker{
  position:fixed;
  top:7%;
  right:-113px;
  width:160px;
  height: 50px;
  font-size: 12px;
}
.bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.broker1{
  top:18%;
}
.broker2{
  top:28%;
}
.broker_icon{
  width:100%;
  height:100%;
  border-radius: 50%;
}
.i_header{
  width: 60%;
}
.m_l{
  margin-left: 3px;
}
.best_left{
  position: relative;
  width:35px;
  height:35px;
  margin-left: 8px;
}
.best_icon{
  position: absolute;
  width:28px;
  height:28px;
  top:-4px;
  right:-4px;
}
.best_right{
  position: relative;
  z-index: 10;
  margin-left: 10px;
}
.footer{
  padding: 20rpx;
  color: #666;
}
.foot_img{
  width: 60rpx;
  height: 60rpx;
}